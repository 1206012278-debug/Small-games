#define ROW 3
#define COL 3

#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void menu()
{
    printf("***************************************************\n");
    printf("*************   1.开始游戏  2.结束游戏   *************\n");
    printf("***************************************************\n");
}

void initboard(char board[ROW][COL] , int row , int col)
{
    int i , j;
    for(i = 0 ; i < row ; i ++)
    {
        for(j = 0 ; j < col ; j ++)
        {
            board[i][j] = ' ';
        }
    }
}

void displayboard(char board[ROW][COL] , int row , int col)
{
    int i , j;
    for(i = 0 ; i < row ; i ++)
    {
        for(j = 0 ; j < col ; j ++)
        {
            printf(" %c " , board[i][j]);
            if(j < col - 1)
            {
                printf("|");
            }
        }
        printf("\n");
        if(i < row - 1)
        {
            printf("---|---|---\n");
        }
    }
}

void playermove(char board[ROW][COL] , int row , int col)
{
    int x , y;
    while(1)
    {
        printf("请选择你要下棋的位置坐标");
        scanf("%d%d",&x,&y);
        if(x <= row && x >= 1 && y <= col && y >= 1)
        {
            if(board[x - 1][y - 1] == ' ')
            {
                board[x - 1][y - 1] = '*';
                break;
            }
            else
            {
                printf("此位置已有棋,请重新选择位置");
            }
        }
        else
        {
            printf("超出棋盘,请重新选择位置");
        }
    }
}

void computermove(char board[ROW][COL] , int row , int col)
{
    int x , y;
    while(1)
    {
        x = rand() % 3;
        y = rand() % 3;
        if(board[x][y] == ' ')
        {
            board[x][y] = '#';
            break;
        }
    }
}

int is_full(char board[ROW][COL] , int row , int col)
{
    int i , j;
    for(i = 0 ; i < row ; i ++)
    {
        for(j = 0 ; j < col ; j ++)
        {
            if(board[i][j] == ' ')
            {
                return 0;
            }
        }
    }
    return 1;
}

char is_win(char board[ROW][COL] , int row , int col)
{
    int r = 0;
    for(r = 0 ; r < row ; r ++)
    {
        if(board[r][0] == board[r][1] && board[r][1] == board[r][2] && board[r][1] != ' ')
        {
            return board[r][1];
        }
    }
    for(r = 0 ; r < col ; r ++)
    {
        if(board[0][r] == board[1][r] && board[1][r] == board[2][r] && board[1][r] != ' ')
        {
            return board[1][r];
        }
    }
    if(board[0][0] == board[1][1] && board[1][1] == board[2][2] && board[1][1] != ' ')
    {
        return board[1][1];
    }
    if(board[0][2] == board[1][1] && board[1][1] == board[2][0] && board[1][1] != ' ')
    {
        return board[1][1];
    }
    if(is_full(board , row , col) == 1)
    {
        return 'a';
    }
    return 'c';
}

void game(char board[ROW][COL] , int row , int col)
{
    char ret = 0;
    initboard(board , row , col);
    displayboard(board , row , col);
    while(1)
    {
        playermove(board , row , col);
        ret = is_win(board , row , col);
        if(ret != 'c')
            break;
        computermove(board , row , col);
        ret = is_win(board , row , col);
        if(ret != 'c')
            break;
    }
    if(ret == '*')
    {
        printf("玩家胜\n");
    }
    else if(ret == '#')
    {
        printf("电脑胜\n");
    }
    else if(ret == 'c')
    {
        printf("平局\n");
    }
}

int main()
{
    srand(time(NULL));
    char board[ROW][COL] = {'0'};
    int option = 0;
    do
    {
        menu();
        printf("请选择是否开始游戏\n");
        scanf("%d",&option);
        switch(option)
        {
            case 1 :
                printf("开始游戏\n");
                game(board , ROW , COL);
                break;
            case 2 :
                printf("结束游戏\n");
                break;
            default :
                printf("输入错误\n");
                break;
        }
    }while(option != 2);
    return 0;
}
